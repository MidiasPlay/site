<style>
    /* Hero Section */
    .plans-hero {
        background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
        padding: 4rem 0;
        color: white;
        text-align: center;
    }

    .hero-content h1 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .hero-content p {
        font-size: 1.25rem;
        opacity: 0.9;
        max-width: 600px;
        margin: 0 auto;
    }

    /* Plans Section */
    .plans-section {
        padding: 5rem 0;
        background: #f8fafc;
    }

    .plans-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
    }

    .plan-card {
        background: white;
        border-radius: 20px;
        padding: 2.5rem 2rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .plan-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    .plan-card.premium {
        border: 3px solid #2563eb;
        transform: scale(1.05);
    }

    .plan-card.premium:hover {
        transform: scale(1.05) translateY(-10px);
    }

    /* Plan Header */
    .plan-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .plan-header h3 {
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
        color: #1e293b;
    }

    .plan-badge {
        background: #10b981;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 600;
    }

    .plan-badge.premium {
        background: #2563eb;
    }

    /* Plan Price */
    .plan-price {
        display: flex;
        align-items: baseline;
        margin-bottom: 0.5rem;
    }

    .plan-price .currency {
        font-size: 1.25rem;
        font-weight: 500;
        color: #64748b;
    }

    .plan-price .amount {
        font-size: 3.5rem;
        font-weight: 800;
        color: #1e293b;
        margin: 0 0.25rem;
    }

    .plan-price .period {
        font-size: 1.125rem;
        color: #64748b;
        font-weight: 500;
    }

    .plan-price-annual {
        margin-bottom: 2rem;
        color: #10b981;
        font-weight: 600;
        font-size: 0.875rem;
    }

    /* Plan Description */
    .plan-description {
        margin-bottom: 2rem;
    }

    .plan-description p {
        color: #64748b;
        font-size: 1.125rem;
        line-height: 1.6;
        margin: 0;
    }

    /* Plan Features */
    .plan-features, .plan-advantages {
        margin-bottom: 2rem;
    }

    .plan-features h4, .plan-advantages h4 {
        font-size: 1.25rem;
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 1rem;
    }

    .plan-features ul, .plan-advantages ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .plan-features li, .plan-advantages li {
        display: flex;
        align-items: center;
        margin-bottom: 0.75rem;
        color: #475569;
    }

    .plan-features i, .plan-advantages i {
        color: #10b981;
        margin-right: 0.75rem;
        width: 16px;
    }

    .plan-advantages i {
        color: #f59e0b;
    }

    /* Plan Button */
    .plan-button {
        width: 100%;
        padding: 1rem;
        background: linear-gradient(135deg, #2563eb, #1d4ed8);
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 1.125rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .plan-button:hover {
        background: linear-gradient(135deg, #1d4ed8, #1e40af);
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(37, 99, 235, 0.3);
    }

    .plan-button.premium {
        background: linear-gradient(135deg, #10b981, #059669);
    }

    .plan-button.premium:hover {
        background: linear-gradient(135deg, #059669, #047857);
        box-shadow: 0 10px 20px rgba(16, 185, 129, 0.3);
    }

    /* TV Box Section */
    .tvbox-section {
        padding: 5rem 0;
        background: white;
    }

    .tvbox-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
    }

    .tvbox-image img {
        width: 100%;
        border-radius: 16px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }

    .tvbox-info h2 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 1.5rem;
    }

    .tvbox-info > p {
        font-size: 1.25rem;
        color: #64748b;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .tvbox-features {
        list-style: none;
        padding: 0;
        margin-bottom: 2rem;
    }

    .tvbox-features li {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
        color: #475569;
        font-size: 1.125rem;
    }

    .tvbox-features i {
        color: #2563eb;
        margin-right: 1rem;
        width: 20px;
    }

    .tvbox-note {
        color: #64748b;
        font-style: italic;
        margin-top: 2rem;
    }

    /* Benefits Section */
    .benefits-section {
        padding: 5rem 0;
        background: #f8fafc;
        text-align: center;
    }

    .benefits-section h2 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 3rem;
    }

    .benefits-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }

    .benefit-item {
        padding: 2rem;
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

    .benefit-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }

    .benefit-item i {
        font-size: 3rem;
        color: #2563eb;
        margin-bottom: 1.5rem;
    }

    .benefit-item h3 {
        font-size: 1.5rem;
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 1rem;
    }

    .benefit-item p {
        color: #64748b;
        line-height: 1.6;
        margin: 0;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .hero-content h1 {
            font-size: 2rem;
        }

        .hero-content p {
            font-size: 1.125rem;
        }

        .plans-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .plan-card.premium {
            transform: none;
        }

        .plan-card.premium:hover {
            transform: translateY(-10px);
        }

        .tvbox-content {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .tvbox-info h2 {
            font-size: 2rem;
        }

        .benefits-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
