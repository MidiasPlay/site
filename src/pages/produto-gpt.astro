<style>
    :root{
        --bg: #0e1b4d;
        --bg-2: #0a1540;
        --blue: #2f6cf6;
        --indigo: #6754f3;
        --text: #1f2937;
        --muted: #5b6474;
        --card: #ffffff;
        --border: #e6e8ee;
        --radius: 16px;
        --shadow: 0 10px 30px rgba(10, 21, 64, .08);
        --shadow-lg: 0 20px 50px rgba(10, 21, 64, .12);
        --container: 1160px;
    }

    html, body {
        margin: 0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, "Helvetica Neue", Arial, "Noto Sans", "Apple Color Emoji", "Segoe UI Emoji";
        color: var(--text);
        background: #f7f8fb;
        line-height: 1.5;
    }

    .container {
        max-width: var(--container);
        margin: 0 auto;
        padding: 0 20px;
    }
    .center {
        text-align: center;
    }
    .maxw-720 {
        max-width: 720px;
        margin: 0 auto;
    }
    .mt-24 {
        margin-top: 24px;
    }
    .mt-32 {
        margin-top: 32px;
    }

    .hero {
        background: radial-gradient(1200px 400px at 50% -10%, #2f6cf666, transparent), linear-gradient(135deg, var(--bg), var(--bg-2));
        color: #fff;
        padding: 72px 0 64px;
    }
    .hero h1 {
        font-size: 48px;
        margin: 0 0 8px;
        letter-spacing: -0.02em;
    }
    .lead {
        font-size: 18px;
        opacity: .95;
    }
    .cta {
        margin-top: 24px;
        display: inline-flex;
        gap: 12px;
        flex-wrap: wrap;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 12px 18px;
        border-radius: 999px;
        text-decoration: none;
        font-weight: 600;
        border: 1px solid transparent;
        transition: transform .06s ease, box-shadow .2s ease, background .2s ease, color .2s ease;
    }
    .btn:hover { transform: translateY(-1px); }
    .btn-primary { background: #fff; color: var(--blue); box-shadow: var(--shadow); }
    .btn-outline { background: transparent; color: #fff; border-color: #ffffff88; }
    .btn-outline:hover { background: #fff; color: var(--blue); }
    .btn-light { background: #fff; color: var(--bg); box-shadow: var(--shadow); }

    .section { padding: 64px 0; background: #fff; }
    .section.alt { background: #f2f5ff; }
    .title { font-size: 32px; margin: 0 0 8px; letter-spacing: -0.01em; }
    .muted { color: var(--muted); }

    .grid { display: grid; gap: 28px; }
    .grid.two { grid-template-columns: repeat(1, 1fr); }
    .grid.three { grid-template-columns: repeat(1, 1fr); }
    @media (min-width: 820px) {
        .grid.two { grid-template-columns: repeat(2, 1fr); }
        .grid.three { grid-template-columns: repeat(3, 1fr); }
    }

    .card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 20px 22px;
        box-shadow: var(--shadow);
    }
    .card-img {
        width: 100%;
        height: auto;
        display: block;
        border-radius: var(--radius);
        box-shadow: var(--shadow-lg);
        margin-bottom: 12px;
    }
    .accent-blue {
        color: var(--blue);
        margin: 0 0 6px;
    }
    .accent-indigo {
        color: var(--indigo);
        margin: 0 0 6px;
    }

    .list {
        list-style: none;
        padding: 0;
        margin: 12px 0 0;
        display: grid;
        gap: 10px;
    }
    .list li {
        display: grid;
        grid-template-columns: 24px 1fr;
        align-items: center;
        gap: 10px;
    }

    .feature {
        background: #fff;
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 18px 18px;
        box-shadow: var(--shadow);
    }

    .cta-final {
